#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo 🐶 Husky pre-commit hook running...

cat .version > version

cd frontend
npm run format:frontend -- --loglevel silent
npm run format:backend -- --loglevel silent
npm version $version --allow-same-version --silent
cd ..

git add .

echo ✅ Hook was successful.