#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo -e "🐶 Husky pre-commit hook running...\n"

cd frontend

echo -e "✏️\tFrontend formating..."
npm run format:frontend -- --loglevel silent

echo -e "✏️\tBackend formating..."
npm run format:backend -- --loglevel silent

echo -e "📜 Version:"
npm version $(cat ../.version) --allow-same-version

cd ..

echo -e "\n💾 Git saved changes.\n"
git add .

echo -e "✅ Hook was successful.\n"