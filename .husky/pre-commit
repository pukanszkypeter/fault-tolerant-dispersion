#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo 🐶 Husky pre-commit hook running...

cd frontend

echo ✏️ Frontend formating...
npm run format:frontend -- --loglevel silent

echo ✏️ Backend formating...
npm run format:backend -- --loglevel silent

echo 📜 Version:
npm version $(cat ../.version) --allow-same-version

cd ..

echo 💾 Git saved changes.
git add .

echo ✅ Hook was successful.